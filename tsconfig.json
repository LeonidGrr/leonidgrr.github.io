{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "module": "esNext",
        "target": "es5",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "lib": ["es2015", "dom", "webworker"],
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        ".git",
        "node_modules",
        "old"
    ]
}
